@* Create.cshtml *@
@model MarginViewModel // Replace YourNamespace with your actual namespace

@{
    ViewBag.Title = "Margin Management";
}

<h2>Margin Management</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ID" />

    <div class="form-horizontal">
        <h4>Update Margin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label asp-for="Username" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>

        <br />
        <div class="form-group">
            <label asp-for="Percentage" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Percentage" class="form-control" />
                <span asp-validation-for="Percentage" class="text-danger"></span>
            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-sm btn-warning" />
            </div>
        </div>
    </div>

    <br />
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}

