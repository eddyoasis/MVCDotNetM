@model MarginFormulaViewModel

@using (Html.BeginForm("Delete", "MarginFormula", FormMethod.Post, new { id = "deleteForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)

    <div class="modal-header">
        <h5 class="modal-title">Delete Email Notification</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="Type" class="form-control" disabled />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Formula" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="Formula" class="form-control" disabled />
                <span asp-validation-for="Formula" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="CreatedBy" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreatedBy" class="form-control" disabled />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="CreatedAt" class="control-label"></label>
            <div class="col-md-10">
                <input type="text" asp-for="CreatedAt" class="form-control" disabled />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="ModifiedBy" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="ModifiedBy" class="form-control" disabled />
                <span asp-validation-for="ModifiedBy" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="ModifiedAt" class="control-label"></label>
            <div class="col-md-10">
                <input type="text" asp-for="ModifiedAt" class="form-control" disabled />
                <span asp-validation-for="ModifiedAt" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
