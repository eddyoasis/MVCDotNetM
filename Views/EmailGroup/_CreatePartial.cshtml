@model EmailGroupAddReq

@{
    var requiredAttr = Model.TypeID == 1;
}

@functions {
    bool GetRequiredAttribute(int typeId) => typeId == 1;
}

@using (Html.BeginForm("Create", "EmailGroup", FormMethod.Post, new { id = "createForm" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <h5 class="modal-title">Create Email Group</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group mt-3">
            <label asp-for="TypeSelections" class="control-label"></label>
            <div class="col-md-10">
                <select id="optionTypeSelectionsCreate" class="form-control" asp-items="@Model?.TypeSelections">
                </select>
            </div>
            <input asp-for="TypeID" id="TypeCreate" class="form-control" hidden />
        </div>
        <div class="form-group mt-3">
            <label asp-for="Name" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="EmailTo" class="control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="EmailTo" rows="8" class="form-control" required="@(@GetRequiredAttribute(Model.TypeID) ? "required" : null)"></textarea>
                <span asp-validation-for="EmailTo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="EmailCC" class="control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="EmailCC" rows="8" class="form-control" required="@(@GetRequiredAttribute(Model.TypeID) ? "required" : null)"></textarea>
                <span asp-validation-for="EmailCC" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    $(document).ready(function () {

        // Update on change
        $(document).on("change", "#optionTypeSelectionsCreate", function (e) {
            $('#TypeCreate').val($("#optionTypeSelectionsCreate").val())
            console.log($('#TypeCreate').val());
        });

        $("#optionTypeSelectionsCreate").trigger("change");
    });
</script>

