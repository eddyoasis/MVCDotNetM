@model EmailGroupViewModel

@using (Html.BeginForm("Delete", "EmailGroup", FormMethod.Post, new { id = "deleteForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)

    <div class="modal-header">
        <h5 class="modal-title">Delete Email Group</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group mt-3">
            <label asp-for="Type" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="Type" class="form-control" disabled />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Name" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="EmailTo" class="control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="EmailTo" rows="8" class="form-control" disabled></textarea>
                <span asp-validation-for="EmailTo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="EmailCC" class="control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="EmailCC" rows="8" class="form-control" disabled></textarea>
                <span asp-validation-for="EmailCC" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
