@model EmailNotificationEditReq

@using (Html.BeginForm("Edit", "EmailNotification", FormMethod.Post, new { id = "editForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)

    <div class="modal-header">
        <h5 class="modal-title">Edit Email Notification</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group mt-2">
            <label asp-for="TypeSelections" class="control-label"></label>
            <div class="col-md-10">
                <select id="optionTypeSelectionsEdit" class="form-control" asp-items="@Model?.TypeSelections">
                </select>
            </div>
            <input asp-for="TypeID" id="TypeEdit" class="form-control" hidden />
        </div>

        <br />
        <div class="form-group">
            <label asp-for="MarginType" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="MarginType" class="form-control" />
                <span asp-validation-for="MarginType" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="form-group">
            <label asp-for="EmailTemplate" class="control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="EmailTemplate" rows="8" class="form-control"></textarea>
                <span asp-validation-for="EmailTemplate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-warning">Edit</button>
    </div>
}

<script>
    $(document).ready(function () {

        $("#optionTypeSelectionsEdit").val($('#TypeEdit').val());

        // Update on change
        $(document).on("change", "#optionTypeSelectionsEdit", function (e) {
            $('#TypeEdit').val($("#optionTypeSelectionsEdit").val())
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
