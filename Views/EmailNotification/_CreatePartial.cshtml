@model EmailNotificationAddReq

@using (Html.BeginForm("Create", "EmailNotification", FormMethod.Post, new { id = "createForm" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <h5 class="modal-title">Create Email Notification</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="MarginType" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="MarginType" class="form-control" />
                <span asp-validation-for="MarginType" class="text-danger"></span>
            </div>
        </div>

        <br />
        <div class="form-group">
            <label asp-for="EmailTemplate" class="control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="EmailTemplate" rows="8" class="form-control"></textarea>
                <span asp-validation-for="EmailTemplate" class="text-danger"></span>
            </div>
        </div>
        @* <div class="form-group">
            <label asp-for="EmailTemplate" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmailTemplate" class="form-control" />
                <span asp-validation-for="EmailTemplate" class="text-danger"></span>
            </div>
        </div> *@

       
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
